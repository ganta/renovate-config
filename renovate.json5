{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:base"],
  labels: ["renovate", "dependencies"],
  configMigration: true,
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
    platformAutomerge: true,
  },
  packageRules: [
    // Non-major updates of Node.js
    {
      matchManagers: ["npm"],
      matchUpdateTypes: ["minor", "patch"],
      excludePackageNames: ["renovate"],
      automerge: true,
      platformAutomerge: true,
    },
    // Renovate
    {
      groupName: "Renovate",
      groupSlug: "renovate",
      matchManagers: ["npm"],
      matchPackageNames: ["renovate"],
      matchUpdateTypes: ["major", "minor"],
      minimumReleaseAge: "8 days",
      internalChecksFilter: "strict",
      automerge: true,
    },
    {
      groupName: "Renovate",
      groupSlug: "renovate",
      matchManagers: ["npm"],
      matchPackageNames: ["renovate"],
      matchUpdateTypes: ["patch"],
      minimumReleaseAge: "7 days",
      internalChecksFilter: "none",
      automerge: true,
    },
    // React.js
    {
      groupName: "React",
      groupSlug: "reactjs",
      matchManagers: ["npm"],
      matchPackageNames: [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom",
        "@testing-library/react",
      ],
    },
    // .node-version
    {
      matchManagers: ["nodenv"],
      matchUpdateTypes: ["minor", "patch"],
      automerge: true,
      platformAutomerge: true,
    },
  ],
}
