{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:base"],
  labels: ["renovate", "dependencies"],
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
    automergeType: "branch",
  },
  packageRules: [
    // Non major updates of Node.js
    {
      matchManagers: ["npm"],
      matchUpdateTypes: ["minor", "patch"],
      excludePackageNames: ["renovate"],
      automerge: true,
      automergeType: "branch",
    },
    // React.js
    {
      groupName: "React",
      groupSlug: "reactjs",
      matchManagers: ["npm"],
      matchPackageNames: [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom",
      ],
    },
    // .node-version
    {
      matchManagers: ["nodenv"],
      matchUpdateTypes: ["minor", "patch"],
      automerge: true,
      automergeType: "branch",
    },
  ],
}
