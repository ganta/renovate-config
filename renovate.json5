{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:base"],
  labels: ["renovate", "dependencies"],
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
  },
  automergeType: "branch",
  packageRules: [
    // Renovate
    {
      groupName: "Renovate",
      groupSlug: "renovate",
      matchManagers: ["npm"],
      matchPackageNames: ["renovate"],
      automerge: false,
    },
    // GitHub Action
    {
      matchDepTypes: ["action"],
      automerge: false,
    },
    // React.js
    {
      groupName: "React (Major)",
      groupSlug: "react-major",
      matchManagers: ["npm"],
      matchPackageNames: [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom",
      ],
      matchUpdateTypes: ["major"],
      automerge: false,
    },
    {
      groupName: "React (Non major)",
      groupSlug: "react-non-major",
      matchManagers: ["npm"],
      matchPackageNames: [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom",
      ],
      matchUpdateTypes: ["minor", "patch"],
      automerge: true,
    },
    // Non major updates
    {
      matchUpdateTypes: ["minor", "patch"],
      automerge: true,
    },
  ],
  regexManagers: [
    // Node.js with asdf
    {
      fileMatch: ["^.tool-versions$"],
      matchStrings: ["^nodejs (?<currentValue>.*)\\n"],
      depNameTemplate: "nodejs/node",
      versioningTemplate: "node",
      datasourceTemplate: "node",
    },
  ],
}
