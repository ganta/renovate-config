{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:base"],
  labels: ["renovate", "dependencies"],
  lockFileMaintenance: {
    enabled: true,
    // When using Renovate for GitHub, the server is busy on the first day of the month.
    schedule: ["before 5am on the last day of the month"],
  },
  packageRules: [
    {
      groupName: "React",
      groupSlug: "react",
      matchManagers: ["npm", "yarn", "pnpm"],
      matchPackageNames: [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom",
      ],
    },
  ],
  regexManagers: [
    // Node.js with asdf
    {
      fileMatch: ["^.tool-versions$"],
      matchStrings: ["^nodejs (?<currentValue>.*)\\n"],
      depNameTemplate: "nodejs/node",
      versioningTemplate: "node",
    },
  ],
}
